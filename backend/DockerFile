# Imagen base
FROM python:3.11-slim

# Directorio de trabajo dentro del contenedor
WORKDIR /app

# Copiar dependencias e instalarlas
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar el c√≥digo del backend
COPY . .

# Exponer puerto
EXPOSE 5000

# Ejecutar app
CMD ["python", "app.py"]
